name: env variables demo 1
on:
  workflow_dispatch:
jobs:
  show-envs:
    runs-on: ubuntu-latest
    env:
      GREETING: "Hej"
      TARGET: "Team"
    steps:
      - uses: actions/checkout@v4
      - run: echo "${GREETING}, ${TARGET}!"
      - run: |
          echo "Repository: $GITHUB_REPOSITORY"
          echo "Workflow: $GITHUB_WORKFLOW"
          echo "Run number: $GITHUB_RUN_NUMBER"
